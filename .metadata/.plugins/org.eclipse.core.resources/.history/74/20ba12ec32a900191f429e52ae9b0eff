package pages;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.testng.Assert;

public class HomePage {

	 WebDriver driver;

	 public void HomePageValidation()
	 {
		 WebElement personal=driver.findElement(By.linkText("Personal"));
		 boolean search_personal=personal.isDisplayed();
		 if (search_personal==true)
		 {
		 String actualTitle =personal.getText();
		 String expectedTitle ="Best Consumer Digital Bank UAE | Personal Banking | Mashreq Bank";
		 Assert.assertEquals(actualTitle,expectedTitle);
		 System.out.println("Linktext found :");
	 }
		
	 }
}
